*,
*::after,
*::before{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root{
    --primary: #fff;
    --secondary: #000;
    --color-1: #00763a;
    --color-2: #af9b6f;
    --color-3: #f2f2f2;
}

html{
    margin: 0;
    padding: 0;
    font-family: sans-serif;
    font-size: 16px;
    color: var(--secondary);
}

body{
    margin: 0;
    padding: 0;
    background-color: var(--primary);
    overflow-x: hidden;
    scroll-behavior: smooth;
}

.nav{
    z-index: 10;
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    background-color: var(--primary);
    box-sizing: border-box;
    padding: .5rem 5rem;
    border-bottom: 1px solid var(--color-1);
}

.nav-logo{
    cursor: pointer;
}

.logo-mobile{
    display: none;
}

.hamburger-menu{
    opacity: 1;
    transition: opacity 1s ease 0.2s;
    display: flex;
    flex-direction: column;
    width: 30px;
    height: 25px;
    gap: 5px;
    cursor: pointer;
}

.hamburger-menu-bars{
    width: 30px;
    height: 5px;
    background: var(--secondary);
    border-radius: 50px
}

.hamburger-x {
    z-index: 99;
    
    display: flex;
    position: absolute;
    right: 5rem;
    top: 1.5rem;
    flex-direction: column;
    width: max-content;
    height: max-content;
    gap: 5px;
    cursor: pointer;
    transform: translate(1000%);
    transition: transform 0.6s ease-in-out;
  }
  
  .hamburger-x-bars{
    background: black;
    width: calc(1.41421356237 * 25px);
    height: 5px;
    border-radius: 50px;
    transform-origin: center;
  }
  
  .bar-1, .bar-2{
    position: relative;
    right: 0.15rem;
  }
  
  .bar-1{
    transform: rotate(45deg);
    top: 10px;
  }
  
  .bar-2{
    transform: rotate(-45deg);
  }
  
  .nav-overlay{
    z-index: 999;
    transform: translate(100%);
    transition: transform 0.4s ease-in-out;
    position: fixed;
    right: 0;
    top: 0;
    width: 30%;
    height: 100%;
    float: right;
    background-color: var(--primary);
    border-left: 3px solid var(--color-1);
    backdrop-filter: blur(3px);
  }

  .nav-overlay-list{
    transform: translate(100%);
    transition: transform 0.6s ease-in-out;
    display: flex;
    flex-direction: column;
    position: absolute;
    gap: .5rem;
    box-sizing: border-box;
    top: 7rem;
    right: 5rem;
    font-size: 24px;
    text-transform: uppercase;
  }

  .nav-overlay-list a{
    text-align: right;
    text-align: center;
    color: var(--secondary);
    text-decoration: none;
  }
  .nav-overlay-list a:hover{
    color: var(--color-1);
    scale: 105%;
    text-decoration: underline;
  }

  .overlay-x{
    transform: translate(-100%);
    transition: transform 0.4s ease-in-out;
    position:fixed;
    left: 0;
    background-color: rgba(0, 0, 0, 0);
    width: 70%;
    margin-left: 0%;
    height: calc(100% - 46px);
   
  }


